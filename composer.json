{
    "name": "client-name/project-name",
    "description": "Description of the project.",
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "wordpress",
                "type": "webroot",
                "version": "4.1",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WordPress/WordPress/archive/4.1.zip"
                },
                "require" : {
                    "fancyguy/webroot-installer": "1.0.0"
                }
            }
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "wordpress": "4.1",
        "fancyguy/webroot-installer": "1.0.0",
        "incenteev/composer-parameter-handler": "~2.0",
        "dlinsmey/composer-installer": "1.0.*@dev"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Dlinsmeyer\\Composer\\Installer::run"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ]
    },
    "extra": {
        "webroot-dir": "public/wp-core",
        "webroot-package": "wordpress",
        "installer-paths": {
            "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "incenteev-parameters": {
            "file": "parameters.yml",
            "dist-file": "parameters-dist.yml",
            "parameter-key": "parameters"
        },
        "dlinsmeyer-installer": {
            "config-file": "parameters.yml",
            "htaccess": {
                "dist-file": ".htaccess-dist",
                "file": "public/.htaccess"
            }
        }
    }
}
