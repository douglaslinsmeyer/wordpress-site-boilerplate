{
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "wordpress",
                "type": "webroot",
                "version": "3.8",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WordPress/WordPress/archive/3.8.zip"
                },
                "require" : {
                    "fancyguy/webroot-installer": "1.0.0"
                }
            }
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "wordpress": "3.8",
        "fancyguy/webroot-installer": "1.0.0"
    },
    "extra": {
        "webroot-dir": "core",
        "webroot-package": "wordpress"
        "installer=paths": {
            "content/plugins/{$name}/": ["type:wordpress-plugin"]
            "content/themes/{$name}/": ["type:wordpress-theme"]
        }
    }
}
